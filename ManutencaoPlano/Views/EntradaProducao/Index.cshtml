@using System.IO
@{
    ViewData["Title"] = "Entrada de produção";
}

<div class="container-fluid">
    <div class="card-columns">
        <div class="card p-1 text-center shadow-sm">
            <h3 class="">Banda</h3>
            <div class="card-body text-center text-primary">
                @Html.Raw(File.ReadAllText("wwwroot/svg/meia-carcaca-bovina.svg"))
                <p class="card-text text-dark"></p>
                <a class="text-primary stretched-link text-right d-block" asp-area="" asp-route-tipo="BANDA" asp-route-unidade="182" asp-controller="EntradaProducao" asp-action="Tabela"><strong>Acessar</strong></a>
            </div>
        </div>

         <div class="card p-1 text-center shadow-sm">
            <h3 class="">Traseiro</h3>
